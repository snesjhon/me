---
import { Meta, HeaderSingle } from "../components";

interface Props {
  title: string;
}

const astroProps = Astro.props;
let title = "";
let description = "";
if (astroProps.frontmatter) {
  title = astroProps.frontmatter.title;
  description = astroProps.frontmatter.description;
} else if (astroProps.title) {
  title = astroProps.title;
}
---

<html lang="en">
  <head>
    <Meta title={title} description={description} />
  </head>

  <body>
    <HeaderSingle title={title} />
    <main class="container" style="padding-top: 10px">
      <slot />
    </main>
  </body>
</html>
