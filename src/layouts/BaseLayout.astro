---
import Sidebar from '../components/Sidebar.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import Meta from '../components/Meta.astro';
import Analytics from '@vercel/analytics/astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import { SITE_DESCRIPTION } from "../content/constants";
import '../content/styles/tailwind.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Meta title="Home" description={SITE_DESCRIPTION} />
    <Analytics />
  </head>
  <body class="bg-gh-canvas-default text-gh-fg-default font-sans antialiased text-sm">
    <div class="grid grid-cols-1 lg:grid-cols-[296px_1fr] gap-4 lg:gap-6 max-w-6xl mx-auto p-4 lg:p-6">
      <Sidebar />
      <main class="flex flex-col gap-4">
        <slot />
      </main>
    </div>
    <ThemeToggle />
    <ScrollToTop />
  </body>
</html>
