---
import { projects } from '../data/projects';
---

{projects.map((project, index) => (
  <article style={`display: grid; grid-template-columns: 1fr; gap: 2rem; padding: 1.5rem 0; ${index !== projects.length - 1 ? 'border-bottom: 1px solid var(--border);' : ''}`}>
    <div>
      <div style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem;">
        {project.tags.map((tag, i) => (
          <>
            <small style="color: var(--text-muted);">{tag}</small>
            {i !== project.tags.length - 1 && <small style="color: var(--text-muted);">|</small>}
          </>
        ))}
      </div>
      <h3>{project.title}</h3>
      <p>{project.description}</p>
      <a href={project.link} target="_blank">View Project â†’</a>
    </div>
    <div>
      <a href={project.link} target="_blank">
        <img src={project.image} alt={project.title} style="width: 100%; border-radius: 6px;" />
      </a>
    </div>
  </article>
))}

<style>
  @media (min-width: 768px) {
    article {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
