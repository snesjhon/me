---
import { careerTimeline } from '../content/data/career-timeline';

---

<div class="space-y-12">
  {careerTimeline.map((period, periodIdx) => (
    <div class="relative">
      {/* Period header with horizontal line */}
      <div class="flex items-center gap-4 mb-8">
        <h3 class="text-base font-semibold text-gh-fg-default whitespace-nowrap m-0">
          {period.year}
        </h3>
        <div class="h-px bg-gh-border-default flex-1"></div>
      </div>

      {/* Career entries in this period */}
      <div class="space-y-10">
        {period.entries.map((entry, entryIdx) => (
          <div class="relative">
            {/* Vertical line connecting to next entry in same period */}
            {entryIdx < period.entries.length - 1 && (
              <div class="absolute left-3 top-12 bottom-[-40px] w-px bg-gh-border-default"></div>
            )}

            {/* Vertical line connecting to next period */}
            {entryIdx === period.entries.length - 1 && periodIdx < careerTimeline.length - 1 && (
              <div class="absolute left-3 top-12 bottom-[-48px] w-px bg-gh-border-default"></div>
            )}

            {/* Entry header */}
            <div class="flex items-start gap-3 mb-4">
              {/* Icon - Heroicon based on entry type */}
              <div class="flex-shrink-0 mt-1">
                {entry.icon === 'briefcase' && (
                  <svg class="w-4 h-4 text-gh-fg-muted" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 0 0 .75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 0 0-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0 1 12 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 0 1-.673-.38m0 0A2.18 2.18 0 0 1 3 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 0 1 3.413-.387m7.5 0V5.25A2.25 2.25 0 0 0 13.5 3h-3a2.25 2.25 0 0 0-2.25 2.25v.894m7.5 0a48.667 48.667 0 0 0-7.5 0M12 12.75h.008v.008H12v-.008Z" />
                  </svg>
                )}
                {entry.icon === 'rocket' && (
                  <svg class="w-4 h-4 text-gh-fg-muted" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" />
                  </svg>
                )}
                {entry.icon === 'star' && (
                  <svg class="w-4 h-4 text-gh-fg-muted" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                  </svg>
                )}
                {entry.icon === 'building' && (
                  <svg class="w-4 h-4 text-gh-fg-muted" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Z" />
                  </svg>
                )}
              </div>

              {/* Company and title */}
              <div class="flex-1">
                <h4 class="text-sm font-semibold text-gh-fg-default m-0">
                  <a
                    href={entry.companyUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gh-accent-fg hover:underline"
                  >
                    {entry.company}
                  </a>
                  <span class="text-gh-fg-muted font-normal"> - {entry.title}</span>
                </h4>
              </div>
            </div>

            {/* Achievements list */}
            <div class="ml-9 pl-4 space-y-3 pb-2">
              {entry.achievements.map((achievement) => (
                <div class="group">
                  <div class="flex items-start gap-2">
                    {/* Small circle bullet */}
                    <div class="flex-shrink-0 w-1.5 h-1.5 rounded-full bg-gh-fg-muted mt-1.5"></div>

                    <div class="flex-1 min-w-0">
                      {achievement.link ? (
                        <a
                          href={achievement.link}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="text-gh-accent-fg hover:underline text-sm font-medium inline-flex items-center gap-1"
                        >
                          {achievement.title}
                          <svg class="w-3 h-3 opacity-0 group-hover:opacity-70 transition-opacity" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M3.75 2h3.5a.75.75 0 0 1 0 1.5h-3.5a.25.25 0 0 0-.25.25v8.5c0 .138.112.25.25.25h8.5a.25.25 0 0 0 .25-.25v-3.5a.75.75 0 0 1 1.5 0v3.5A1.75 1.75 0 0 1 12.25 14h-8.5A1.75 1.75 0 0 1 2 12.25v-8.5C2 2.784 2.784 2 3.75 2Zm6.854-1h4.146a.25.25 0 0 1 .25.25v4.146a.25.25 0 0 1-.427.177L13.03 4.03 9.28 7.78a.751.751 0 0 1-1.042-.018.751.751 0 0 1-.018-1.042l3.75-3.75-1.543-1.543A.25.25 0 0 1 10.604 1Z"></path>
                          </svg>
                        </a>
                      ) : (
                        <span class="text-gh-fg-default text-sm font-medium">{achievement.title}</span>
                      )}

                      {achievement.description && (
                        <p class="text-xs text-gh-fg-muted m-0 mt-0.5">{achievement.description}</p>
                      )}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  ))}
</div>

<style>
  a {
    transition: text-decoration 0.2s ease;
  }
</style>
