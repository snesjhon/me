---
import { jobs } from '../data/experience';
---

<div class="grid grid-cols-1 gap-12">
  <div class="space-y-10">
    {jobs.slice(0, 3).map(job => (
      <div class="grid grid-cols-2 relative">
        <div class="text-right pr-8 border-r border-gh-border-default relative">
          <small class="text-sm text-gh-fg-muted">{job.year}</small>
          <div class="absolute right-[-6px] top-2.5 w-3 h-3 bg-gh-accent-emphasis rounded-full border-2 border-white"></div>
        </div>
        <div class="pl-8">
          <a
            href={job.link}
            target="_blank"
            class="text-gh-accent-fg hover:underline text-base"
          >
            {String(job.id).padStart(2, '0')}. {job.company}
          </a>
          <p class="font-semibold m-0 mt-1 text-gh-fg-default">{job.title}</p>
        </div>
      </div>
    ))}
  </div>

  <div class="space-y-10">
    {jobs.slice(3).map(job => (
      <div class="grid grid-cols-2 relative">
        <div class="text-right pr-8 border-r border-gh-border-default relative">
          <small class="text-sm text-gh-fg-muted">{job.year}</small>
          <div class="absolute right-[-6px] top-2.5 w-3 h-3 bg-gh-accent-emphasis rounded-full border-2 border-white"></div>
        </div>
        <div class="pl-8">
          <a
            href={job.link}
            target="_blank"
            class="text-gh-accent-fg hover:underline text-base"
          >
            {String(job.id).padStart(2, '0')}. {job.company}
          </a>
          <p class="font-semibold m-0 mt-1 text-gh-fg-default">{job.title}</p>
        </div>
      </div>
    ))}
  </div>
</div>
