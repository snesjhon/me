---
import { profile } from '../data/profile';
---

<div class="flex flex-row lg:flex-col gap-3 lg:gap-3 text-sm flex-space-between">
  <a href={profile.social.github} target="_blank" class="text-gh-fg-default hover:text-gh-accent-fg no-underline flex items-center gap-1.5">
    <span>

<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 lg:size-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="m6.75 7.5 3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0 0 21 18V6a2.25 2.25 0 0 0-2.25-2.25H5.25A2.25 2.25 0 0 0 3 6v12a2.25 2.25 0 0 0 2.25 2.25Z" />
</svg>
    </span>
    <span>GitHub</span>
  </a>
  <a href={profile.social.twitter} target="_blank" class="text-gh-fg-default hover:text-gh-accent-fg no-underline hidden lg:flex items-center gap-1.5">
    <span>
<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 lg:size-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 0 1 .865-.501 48.172 48.172 0 0 0 3.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
</svg>
</span>
    <span>Twitter</span>
  </a>
  <a href={profile.social.instagram} target="_blank" class="text-gh-fg-default hover:text-gh-accent-fg no-underline flex items-center gap-1.5">
    <span>

<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 lg:size-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 0 1 5.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 0 0-1.134-.175 2.31 2.31 0 0 1-1.64-1.055l-.822-1.316a2.192 2.192 0 0 0-1.736-1.039 48.774 48.774 0 0 0-5.232 0 2.192 2.192 0 0 0-1.736 1.039l-.821 1.316Z" />
  <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0ZM18.75 10.5h.008v.008h-.008V10.5Z" />
</svg>
    </span>
    <span>Instagram</span>
  </a>

  <!-- Theme toggle -->
  <button
    id="theme-toggle-inline"
    type="button"
    aria-label="Toggle theme"
    class="text-gh-fg-default hover:text-gh-accent-fg flex items-center gap-1.5 cursor-pointer lg:hidden"
  >
    <svg id="theme-icon-sun-inline" class="size-5 hidden" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
    </svg>
    <svg id="theme-icon-moon-inline" class="size-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
    </svg>
  </button>
</div>

<script>
  const btnInline = document.getElementById('theme-toggle-inline');
  const iconSunInline = document.getElementById('theme-icon-sun-inline');
  const iconMoonInline = document.getElementById('theme-icon-moon-inline');
  const labelInline = document.getElementById('theme-label-inline');

  function updateInlineIcon() {
    const theme = localStorage.getItem('theme') || 'light';
    if (iconSunInline && iconMoonInline && labelInline) {
      if (theme === 'light') {
        iconSunInline.classList.add('hidden');
        iconMoonInline.classList.remove('hidden');
      } else {
        iconSunInline.classList.remove('hidden');
        iconMoonInline.classList.add('hidden');
      }
    }
  }

  btnInline?.addEventListener('click', () => {
    const current = localStorage.getItem('theme') || 'light';
    const next = current === 'light' ? 'dark' : 'light';
    localStorage.setItem('theme', next);
    document.documentElement.setAttribute('data-theme', next);
    updateInlineIcon();
    // Trigger update for floating button if it exists
    window.dispatchEvent(new CustomEvent('themeChanged'));
  });

  updateInlineIcon();

  // Listen for theme changes from floating button
  window.addEventListener('themeChanged', updateInlineIcon);
</script>
